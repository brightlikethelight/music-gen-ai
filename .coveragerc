[run]
source = music_gen
branch = True
parallel = True
omit =
    */tests/*
    */test_*
    */__pycache__/*
    */venv/*
    */env/*
    */.venv/*
    */migrations/*
    */conftest.py
    */setup.py
    */docs/*
    */scripts/*

[report]
precision = 2
show_missing = True
skip_covered = False
skip_empty = True
sort = Cover

exclude_lines =
    # Standard pragma
    pragma: no cover
    
    # Don't complain about missing debug-only code
    def __repr__
    def __str__
    
    # Don't complain if tests don't hit defensive assertion code
    raise AssertionError
    raise NotImplementedError
    
    # Don't complain if non-runnable code isn't run
    if __name__ == .__main__.:
    
    # Don't complain about abstract methods
    @(abc\.)?abstractmethod
    
    # Type checking blocks
    if TYPE_CHECKING:
    
    # Defensive programming
    except ImportError:
    except Exception as e:
    
    # Logging
    logger\.
    logging\.

[html]
directory = htmlcov
title = Music Gen AI Coverage Report

[xml]
output = coverage.xml

[json]
output = coverage.json
pretty_print = True